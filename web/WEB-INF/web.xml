<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0"> 

    <servlet>
        <servlet-name>controller</servlet-name>
        <servlet-class>cat.urv.deim.sob.ControllerServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>SAXServlet</servlet-name>
        <servlet-class>SAX.SaxServlet</servlet-class>
        <init-param>
            <param-name>input</param-name>
            <param-value>Order.xml</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>controller</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>controller</servlet-name>
        <url-pattern>/url/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SAXServlet</servlet-name>
        <url-pattern>/exportUrl.xml</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
    
    <error-page>
        <location>/error.jsp</location>
    </error-page>

</web-app>